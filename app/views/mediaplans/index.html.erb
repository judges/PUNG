<% content_for :sidebar do %>
	<li><%= link_to 'Новий медіаплан', new_mediaplan_path %></li>
<% end %>
<div class="block">
  <div class="sidebar-block">
    <form action="#" class="form login">
        <label class="label left">Пошук медіапланів</label><input type="text" class="text_field" />
        <input type="submit" class="button" value="Пошук" />
    </form>
  </div>
</div>

<table class="table">
  <tr>
    <th>Назва організації</th>
    <th>Цільова аудиторія</th>
    <th>Кількість друку</th>
    <th>Додаткова іноформація</th>
    <th>Дії</th>
  </tr>

<% @mediaplans.each do |mediaplan| %>
  <tr>
    <td><%=h mediaplan.rianame %></td>
    <td><%=h mediaplan.mediaplanauthidory %></td>
    <td><%=h mediaplan.mediaplanexits %></td>
    <td><%=h mediaplan.mediaplanaditionalinfo %></td>
    <td>
      <%= link_to 'Докладніше', mediaplan %> |
      <%= link_to 'Редагувати', edit_mediaplan_path(mediaplan) %> |
      <%= link_to 'Видалити', mediaplan, :confirm => 'Ви впевнеі?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

